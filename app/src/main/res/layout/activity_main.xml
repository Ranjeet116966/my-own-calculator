<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="0.96">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/clear"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="#F93943"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="clearBtn"/>

            <Button
                android:id="@+id/parenthesis_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/parenthesis"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="parenthesisBtn"/>

            <Button
                android:id="@+id/exponent_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/exponent"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="exponentBtn"/>

            <Button
                android:id="@+id/divide_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/divide"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="divideBtn"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/seven"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="sevenBtn"/>

            <Button
                android:id="@+id/eight_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/eight"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="eightBtn"/>

            <Button
                android:id="@+id/nine_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/nine"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="nineBtn"/>

            <Button
                android:id="@+id/multiply_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/multiply"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="multiplyBtn"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/four"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="fourBtn"/>

            <Button
                android:id="@+id/five_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/five"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="fiveBtn"/>

            <Button
                android:id="@+id/six_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/six"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="sixBtn"/>

            <Button
                android:id="@+id/minus_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/subtract"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="subtractBtn"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/one"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="oneBtn"/>

            <Button
                android:id="@+id/two_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/two"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="twoBtn"/>

            <Button
                android:id="@+id/three_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/three"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="threeBtn"/>

            <Button
                android:id="@+id/add_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/add"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="addBtn"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusMinus_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/plusMinus"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="plusMinusBtn"/>

            <Button
                android:id="@+id/zero_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="zeroBtn"/>

            <Button
                android:id="@+id/point_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/point"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="@color/light_french"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="pointBtn"/>

            <Button
                android:id="@+id/equals_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/equals"
                android:textColor="@color/black"
                android:background="@drawable/circle"
                app:backgroundTint="#69140E"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:onClick="equalsBtn"/>
        </TableRow>


    </TableLayout>

    <EditText
        android:id="@+id/input"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/display"
        android:textSize="24sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="false"
        android:inputType="none"
        tools:ignore = "LabelFor"/>

    <ImageButton
        android:id="@+id/button21"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/backspace"
        android:layout_margin="5dp"
        android:background="@drawable/circle"
        app:srcCompat = "@drawable/backspace"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint = "@color/light_french"
        android:onClick="backspaceBTN"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>